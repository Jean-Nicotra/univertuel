	{% endfor %}
	</ul>
	
	
	
	<ul>	
	{% for majorAttribute in majorAttributes %}
		{{ majorAttribute.attribute.name }} 
		{% for skillCategory in skillCategories %}
			{% if skillCategory.majorAttribute.name is same as (majorAttribute.attribute.name) %} 
				{{ skillCategory.name }}
