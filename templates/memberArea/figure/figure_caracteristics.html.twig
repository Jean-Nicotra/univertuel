		    	{% if skill.skill.skillCategory.name is same as (skillCategory.name) %}
					<li><label> {{ skill.skill.name }}</label>{{ skill.value }}<label></li>
		    	{% endif %}
	    	{% endfor %}
	    	{% endif %}
		{% endfor %}
	{% endfor %}
	</ul>
		
